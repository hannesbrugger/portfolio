---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";
import VietnamPreview from "../components/VietnamPreview.astro";

const projects = (await getCollection("vietnam")).sort(
    (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
    title="My Vietnam Travel "
    description="Learn what I discoverd in Vietnam"
>
    <div class="stack gap-20">
        <main class="wrapper stack gap-8">
            <Hero
                title="My Travel through Vietnam"
                tagline="See my experiences from Saigon to Hanoi"
                align="start"
            />
            <Grid variant="offset">
                {
                    projects.map((project) => (
                        <li>
                            <VietnamPreview project={project} />
                        </li>
                    ))
                }
            </Grid>
        </main>
        <ContactCTA />
    </div>
</BaseLayout>
